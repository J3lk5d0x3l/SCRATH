
# Ejemplo de .env para configurar el bot
# Copia este archivo a .env y reemplaza los valores.

# Entorno de ejecución de Node (opcional, afecta logs y hot-reload)
# Para desarrollo: development
NODE_ENV=development

# Token del bot (REEMPLAZAR con el token real)
DISCORD_TOKEN=YOUR_DISCORD_BOT_TOKEN_HERE

# Entorno y logging
ENVIRONMENT=development
LOG_LEVEL=info

# Base de datos (SQLite por defecto)
DATABASE_URL=file:./data/bot.db

# Registro de comandos slash
# Desarrollo: coloca aquí un GUILD_ID para registro instantáneo
GUILD_ID=

# Feature flags
FEATURE_FLAGS_CACHE_TTL=300000

# Rate limiting (por minuto)
RATE_LIMIT_GLOBAL_PER_MINUTE=120
RATE_LIMIT_GUILD_PER_MINUTE=60
RATE_LIMIT_USER_PER_MINUTE=30
RATE_LIMIT_COMMAND_COOLDOWN_SECONDS=3

# Backpressure (concurrencia)
BP_MAX_GLOBAL=50
BP_MAX_GUILD=10
BP_MAX_USER=3

# Auditoría
AUDIT_ENABLED=true
AUDIT_RETENTION_DAYS=90

# PM2 / sharding (opcional)
PM2_NAMESPACE=discord-bot
SHARD_COUNT=1
SHARD_LIST=0

