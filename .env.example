# Discord Bot
DISCORD_TOKEN=tu_token_aqui

# Environment
NODE_ENV=development
ENVIRONMENT=development
LOG_LEVEL=info

# Database
DATABASE_URL=file:./data/bot.db

# Development (opcional, para registro rápido de comandos)
GUILD_ID=

# Auditoría
AUDIT_ENABLED=true
AUDIT_RETENTION_DAYS=90

# Rate Limiting
RATE_LIMIT_GLOBAL_PER_MINUTE=120
RATE_LIMIT_GUILD_PER_MINUTE=60
RATE_LIMIT_USER_PER_MINUTE=30
RATE_LIMIT_COMMAND_COOLDOWN_SECONDS=3

# Sharding (producción)
SHARD_COUNT=1
SHARD_LIST=

# Feature Flags
FEATURE_FLAGS_CACHE_TTL=60000

# PM2 (producción)
PM2_NAMESPACE=enterprise-discord-bot
