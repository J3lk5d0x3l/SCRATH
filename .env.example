# Discord Bot Configuration
DISCORD_TOKEN=your_bot_token_here

# Environment and Logging
ENVIRONMENT=development
LOG_LEVEL=info

# Database (SQLite)
DATABASE_URL="file:./prisma/bot.db"

# Discord Slash Commands Registration
# Para desarrollo: registrar comandos en un guild específico (rápido, sin latencia de 30 min)
# Déjalo vacío para desarrollo local (no registra), o usa un ID de guild para testing rápido.
# Para producción: déjalo vacío y usa ENVIRONMENT=production para registrar global.
GUILD_ID=

# Features
FEATURE_FLAGS_CACHE_TTL=300000

# Rate Limiting
RATE_LIMIT_GLOBAL_PER_MINUTE=120
RATE_LIMIT_GUILD_PER_MINUTE=60
RATE_LIMIT_USER_PER_MINUTE=30
RATE_LIMIT_COMMAND_COOLDOWN_SECONDS=3

# Audit
AUDIT_ENABLED=true
AUDIT_RETENTION_DAYS=90

# PM2 (opcional, para sharding con múltiples procesos)
PM2_NAMESPACE=discord-bot
SHARD_COUNT=1
SHARD_LIST=0
