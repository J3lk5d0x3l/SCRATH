{
  "name": "enterprise-discord-bot",
  "version": "1.0.0",
  "description": "Discord bot framework for enterprise applications, built with TypeScript and Drizzle ORM.",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc -p tsconfig.json",
    "start": "tsx src/index.ts",
    "db:generate": "drizzle-kit generate:sqlite --schema=src/database/schema.ts --out=drizzle/migrations",
    "db:migrate": "drizzle-kit migrate:sqlite --dialect=sqlite",
    "db:push": "drizzle-kit push:sqlite --schema=src/database/schema.ts",
    "lint": "eslint src --ext .ts",
    "type-check": "tsc --noEmit"
  },
  "keywords": ["discord", "bot", "enterprise", "modular"],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "discord.js": "^14.25.1",
    "dotenv": "^16.4.7",
    "pino": "^9.6.0",
    "pino-pretty": "^11.2.2",
    "drizzle-orm": "^0.30.0",
    "better-sqlite3": "^8.5.0"
  },
  "devDependencies": {
    "typescript": "^5.5.2",
    "tsx": "^4.7.0",
    "drizzle-kit": "^0.22.0",
    "@types/node": "^20.4.2",
    "@types/better-sqlite3": "^7.6.8"
  },
  "engines": {
    "node": ">=20.20.0"
  }
}

